<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="UserProfile.Userprofile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@color/blue_mod"
                android:text="Profile"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="20sp"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20sp"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="20sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="338sp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/card_bg_withborder"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90sp"
                            android:gravity="center"
                            android:layout_margin="10sp"
                            android:background="@color/white">
                            <androidx.cardview.widget.CardView
                                android:layout_width="90sp"
                                android:layout_height="90sp"
                                app:cardCornerRadius="2000sp">
                                <ImageView
                                    android:layout_width="90sp"
                                    android:layout_height="90sp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/person"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account"
                            android:layout_marginStart="10sp"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/blue_mod"/>
                        <LinearLayout
                            android:id="@+id/userp_updatename"
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:layout_marginStart="10sp"
                            android:gravity="center_vertical"
                            android:layout_marginEnd="10sp">
                            <LinearLayout
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:background="@drawable/rounded_ring"
                                >
                                <androidx.cardview.widget.CardView
                                    android:layout_width="60sp"
                                    android:layout_height="60sp"
                                    app:cardCornerRadius="2000sp">
                                    <ImageView
                                        android:layout_width="60sp"
                                        android:layout_height="60sp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/person"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60sp"
                                android:orientation="vertical"
                                android:layout_marginStart="10sp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5sp"
                                    android:textSize="16sp"
                                    android:textColor="@color/blue_mod"/>
                                <TextView
                                    android:id="@+id/up_username"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Hamadi Simba"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:drawableEnd="@drawable/next_icon"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10sp"
                                    android:layout_marginBottom="25sp"
                                    android:background="@drawable/straight_line"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/userp_updatepassword"
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="5sp"
                            android:gravity="center_vertical"
                            android:background="@color/white"
                            android:layout_marginEnd="10sp">
                            <LinearLayout
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:gravity="center"
                                android:background="@color/white"
                                >
                                <androidx.cardview.widget.CardView
                                    android:layout_width="60sp"
                                    android:layout_height="60sp"
                                    android:background="@color/white"
                                    app:cardCornerRadius="2000sp">
                                    <ImageView
                                        android:layout_width="45sp"
                                        android:layout_height="45sp"
                                        android:scaleType="fitXY"
                                        android:layout_gravity="center"
                                        android:src="@drawable/email_icon"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60sp"
                                android:orientation="vertical"
                                android:layout_marginStart="10sp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email(tap to change your password)"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5sp"
                                    android:textSize="16sp"
                                    android:textColor="@color/blue_mod"/>
                                <TextView
                                    android:id="@+id/up_userEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Hamadisimba@gmail.com"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:drawableEnd="@drawable/next_icon"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10sp"
                                    android:layout_marginBottom="25sp"
                                    android:background="@drawable/straight_line"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/userp_updatephonenumber"
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:layout_marginStart="10sp"
                            android:layout_marginTop="5sp"
                            android:gravity="center_vertical"
                            android:layout_marginEnd="10sp">
                            <LinearLayout
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:background="@drawable/rounded_ring"
                                >
                                <androidx.cardview.widget.CardView
                                    android:layout_width="60sp"
                                    android:layout_height="60sp"
                                    app:cardCornerRadius="2000sp">
                                    <ImageView
                                        android:layout_width="60sp"
                                        android:layout_height="60sp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/phone_call"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60sp"
                                android:orientation="vertical"
                                android:layout_marginStart="10sp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Phone Number"
                                    android:textStyle="bold"
                                    android:layout_marginTop="5sp"
                                    android:textSize="16sp"
                                    android:textColor="@color/blue_mod"/>
                                <TextView
                                    android:id="@+id/up_userPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0767164152"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:drawableEnd="@drawable/next_icon"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10sp"
                                    android:layout_marginBottom="25sp"
                                    android:background="@drawable/straight_line"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="350sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginBottom="90sp"
                        android:background="@drawable/card_bg_withborder"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/up_notifications"
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:layout_marginStart="10sp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="20sp"
                            android:layout_marginEnd="10sp">
                            <LinearLayout
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:background="@drawable/rounded_ring"
                                >
                                <androidx.cardview.widget.CardView
                                    android:layout_width="60sp"
                                    android:layout_height="60sp"
                                    app:cardCornerRadius="2000sp">
                                    <ImageView
                                        android:layout_width="60sp"
                                        android:layout_height="60sp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/notification_icon"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60sp"
                                android:orientation="vertical"
                                android:layout_marginStart="10sp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Notifications"
                                    android:textColor="@color/blue_mod"
                                    android:layout_marginTop="15sp"
                                    android:textStyle="bold"
                                    android:textSize="25sp"
                                    android:drawableEnd="@drawable/next_icon"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10sp"
                                    android:layout_marginBottom="25sp"
                                    android:background="@drawable/straight_line"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/up_faq"
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:layout_marginStart="10sp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="20sp"
                            android:layout_marginEnd="10sp">
                            <LinearLayout
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:background="@drawable/rounded_ring"
                                >
                                <androidx.cardview.widget.CardView
                                    android:layout_width="60sp"
                                    android:layout_height="60sp"
                                    app:cardCornerRadius="2000sp">
                                    <ImageView
                                        android:layout_width="60sp"
                                        android:layout_height="60sp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/faq"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60sp"
                                android:orientation="vertical"
                                android:layout_marginStart="10sp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="FAQ"
                                    android:textColor="@color/blue_mod"
                                    android:layout_marginTop="15sp"
                                    android:textStyle="bold"
                                    android:textSize="25sp"
                                    android:drawableEnd="@drawable/next_icon"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10sp"
                                    android:layout_marginBottom="25sp"
                                    android:background="@drawable/straight_line"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/up_aboutUs"
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:layout_marginStart="10sp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="20sp"
                            android:layout_marginEnd="10sp">
                            <LinearLayout
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:background="@drawable/rounded_ring"
                                >
                                <androidx.cardview.widget.CardView
                                    android:layout_width="60sp"
                                    android:layout_height="60sp"
                                    app:cardCornerRadius="2000sp">
                                    <ImageView
                                        android:layout_width="60sp"
                                        android:layout_height="60sp"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/aboutus_icon"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60sp"
                                android:orientation="vertical"
                                android:layout_marginStart="10sp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="About Us"
                                    android:textColor="@color/blue_mod"
                                    android:layout_marginTop="15sp"
                                    android:textStyle="bold"
                                    android:textSize="25sp"
                                    android:drawableEnd="@drawable/next_icon"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10sp"
                                    android:layout_marginBottom="25sp"
                                    android:background="@drawable/straight_line"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/up_logoutbtn"
                            android:layout_width="match_parent"
                            android:layout_height="60sp"
                            android:layout_marginStart="10sp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="20sp"
                            android:layout_marginEnd="10sp">
                            <LinearLayout
                                android:layout_width="60sp"
                                android:layout_height="60sp"
                                android:background="@color/white"
                                >
                                <androidx.cardview.widget.CardView
                                    android:layout_width="60sp"
                                    android:layout_height="60sp"
                                    app:cardCornerRadius="2000sp">
                                    <ImageView
                                        android:layout_width="45sp"
                                        android:layout_height="45sp"
                                        android:scaleType="fitXY"
                                        android:layout_gravity="center"
                                        android:src="@drawable/log_out"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="60sp"
                                android:orientation="vertical"
                                android:layout_marginStart="10sp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Log Out"
                                    android:textColor="@color/blue_mod"
                                    android:layout_marginTop="15sp"
                                    android:textStyle="bold"
                                    android:textSize="25sp"
                                    android:drawableEnd="@drawable/next_icon"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10sp"
                                    android:layout_marginBottom="25sp"
                                    android:background="@drawable/straight_line"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <!--    bottom nav-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85sp"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:background="@drawable/bottom_nav"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/up_home_navigation"
                    android:layout_width="100sp"
                    android:layout_height="70sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="50sp"
                        android:src="@drawable/home_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <TextView
                    android:layout_width="100sp"
                    android:layout_height="70sp"
                    android:layout_weight="1"/>
                <!--            <LinearLayout-->
                <!--                android:layout_width="100sp"-->
                <!--                android:layout_height="70sp"-->
                <!--                android:gravity="center"-->
                <!--                android:layout_weight="1"-->
                <!--                android:background="@color/black"-->
                <!--                android:layout_marginTop="-30sp"-->
                <!--                android:orientation="vertical">-->
                <!--                <ImageView-->
                <!--                    android:layout_width="100sp"-->
                <!--                    android:layout_height="50sp"-->
                <!--                    android:src="@drawable/home_icon"/>-->
                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="Home"-->
                <!--                    android:textStyle="bold"-->
                <!--                    android:textColor="@color/white"/>-->
                <!--            </LinearLayout>-->
                <LinearLayout
                    android:layout_width="100sp"
                    android:layout_height="70sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="50sp"
                        android:src="@drawable/person_vector"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--    Layout yenye add button only-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:orientation="vertical"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/rl_uploadButton"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/round_bg_white">
            <RelativeLayout
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:gravity="center"
                android:background="@drawable/rounded_ring"
                >
                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:src="@drawable/add_icon"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="upload"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>