<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="Items.ViewPage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:background="@drawable/dashboard_top"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="83sp"
                    android:layout_height="83sp"
                    app:cardCornerRadius="1000sp">
                    <ImageView
                        android:layout_width="83sp"
                        android:layout_height="83sp"
                        android:scaleType="fitXY"
                        android:src="@drawable/person"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/vp_displayname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gidion Mushi"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/displayWard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Iyumbu,"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/displayRegion"
                            android:text="Dodoma"
                            android:textStyle="bold"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/vp_back_navigation"
                    android:layout_width="60sp"
                    android:layout_height="80sp"
                    android:layout_marginLeft="8sp"
                    android:clickable="true"
                    android:src="@drawable/arrowback"/>

            </LinearLayout>
        </LinearLayout>

<!--        search bar-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:gravity="center">
            <EditText
                android:id="@+id/vp_searchbar"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:background="@drawable/search_bar"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:drawableEnd="@drawable/search_icon"
                android:hint="search"
                android:drawablePadding="20sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:inputType="textShortMessage"
                />
        </RelativeLayout>

<!--        The four buttons za all , plastic, metal, glass-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vp_allBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textColor="@color/blue_mod"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:background="@drawable/round_button"
                android:textSize="18sp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vp_platicBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:textAllCaps="false"
                android:textColor="@color/blue_mod"
                android:text="Plastic"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:textSize="18sp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vp_metalBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metal"
                android:textColor="@color/blue_mod"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginStart="10sp"
                android:background="@drawable/round_button"
                android:textSize="18sp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/vp_woodBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:textAllCaps="false"
                android:textColor="@color/blue_mod"
                android:text="Wood"
                android:layout_weight="1"
                android:background="@drawable/round_button"
                android:textSize="18sp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:background="@color/white"
                android:id="@+id/recyclerView"
                />

        </ScrollView>
    </LinearLayout>

</RelativeLayout>