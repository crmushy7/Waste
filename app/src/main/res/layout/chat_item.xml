<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8sp">

    <LinearLayout
        android:id="@+id/left_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bot_rounded_corner"
        android:orientation="vertical"
        android:padding="16sp"
        android:visibility="gone"
        android:layout_marginEnd="80sp">

        <TextView
            android:id="@+id/left_chat_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_rounded_corner"
        android:orientation="vertical"
        android:padding="8sp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80sp">
        <TextView
            android:id="@+id/right_chat_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
            />

    </LinearLayout>

</RelativeLayout>